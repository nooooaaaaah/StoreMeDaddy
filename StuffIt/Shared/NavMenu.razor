@using Blazor.Heroicons.Solid
<div class="flex flex-col top-0 w-full bg-indigo-100 p-2 text-center">
    <div class="items-center justify-center text-center">
        <img src="favicon.png" alt="Logo" class="h-10 w-10 left-0 opacity-60 mx-auto" />
        <div class="text-center text-[12px] sm:text-[15px]">Stuff It</div>
    </div>
</div>

<nav class="mt-3 text-center justify-center">
    <div class="mt-3">
        <NavLink class="" href="" Match="NavLinkMatch.All" @onmouseenter="HomeToolTip" @onmouseleave="HomeToolTip">
            <HomeModernIcon class="w-10 text-lg align-text-top text-indigo-100 mx-auto" aria-hidden="true" />
            <div aria-label="Home" class="lg:hidden md:hidden text-indigo-100">Home</div>
            <ToolTip ShowToolTip="showHomeToolTip">Home</ToolTip>
        </NavLink>
    </div>
    <div class="mt-3">
        <NavLink class="" href="files" @onmouseenter="FileToolTip" @onmouseleave="FileToolTip">
            <ListBulletIcon class="w-10 text-lg align-text-top text-indigo-100 mx-auto" aria-hidden="true" />
            <div class="lg:hidden md:hidden text-indigo-100">Files</div>
            <ToolTip ShowToolTip="showFileToolTip">File Upload</ToolTip>
        </NavLink>
    </div>
    <div class="mt-3">
        <NavLink class="" href="settings" @onmouseenter="SettingsToolTip" @onmouseleave="SettingsToolTip">
            <CogIcon class="w-10 text-lg align-text-top text-indigo-100 mx-auto" aria-hidden="true" />
            <div class="lg:hidden md:hidden text-indigo-100">Settings</div>
            <ToolTip ShowToolTip="showSettingsToolTip">Settings</ToolTip>
        </NavLink>
    </div>
</nav>


@code {
    private bool showFileToolTip { get; set; }
    private bool showSettingsToolTip { get; set; }
    private bool showHomeToolTip { get; set; }
    private void FileToolTip(MouseEventArgs e)
    {
        showFileToolTip = showFileToolTip ? false : true;
    }
    private void SettingsToolTip(MouseEventArgs e)
    {
        showSettingsToolTip = showSettingsToolTip ? false : true;
    }
    private void HomeToolTip(MouseEventArgs e)
    {
        showHomeToolTip = showHomeToolTip ? false : true;
    }
}
