@if (ShowToolTip)
{
    <div class="absolute z-50 bg-indigo-800 p-1 rounded-md text-gray-300 text-xs opacity-100">
    @ChildContent
    </div>
}

@code {
    [Parameter]
    public bool ShowToolTip { get; set; }
    [Parameter]
    public required RenderFragment ChildContent { get; set; }
}
